<%= form_for(@item,{:url => :item_create,  :html => { :id => "new_item_form"}}) do|f| %>
    <%= f.fields_for :item_description do |l|%>
        <%= render "new_item_descr_field", :f => l %>
    <% end%>

    <div class="form-group">
      <label>
        <%= t("form_input.item.item_category") %>
      </label>
      <%= fields_for :item_category  do |l| %>
          <%= l.collection_select(:item_category_id, CategoryDescription.all.where(:locale => 'en_US'), :item_category_id, :name, {prompt: t("form_input.item.default_select") },{class: "form-control"})%>
    <% end%>
    </div>

    <%= fields_for :item_location  do |l| %>
        <%= render "field_location", :f => l %>
    <% end%>


    <div class="form-group">
      <label>
        <%= t("form_input.item.item_tags") %>
      </label>

      <%= fields_for :item_tags  do |l| %>
          <%= l.text_field :tag_text,{class: "form-control"} %>
      <% end%>

    </div>
    <input type="submit" class="btn btn-primary btn-lg" />





<% end %>